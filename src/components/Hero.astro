---
import "../styles/global.css";
---
<section class="relative h-screen w-full bg-gradient-to-bl from-[#19274e] to-[#220114] overflow-hidden">
    <div class="absolute top-0 left-0 w-full h-full">
        <div class="shooting-star"></div>
        <div class="shooting-star"></div>
        <div class="shooting-star"></div>
        <div class="shooting-star"></div>
        <div class="shooting-star"></div>
        <div class="shooting-star"></div>
        <div class="shooting-star"></div>
        <div class="shooting-star"></div>
    </div>
    <div class="container relative mx-auto flex h-full flex-col items-center justify-center px-4 text-center">
        <h1 class="text-4xl font-bold text-white md:text-6xl">MarkiDev</h1>
        <p class="mt-4 text-lg text-white md:text-2xl">Desarrollo web a tu medida</p>
    </div>
    <div class="scroll-down-indicator absolute bottom-10 left-1/2 transform -translate-x-1/2">
        <div class="oval">
            <div class="arrow"></div>
        </div>
    </div>
</section>

<style>
    .shooting-star {
        position: absolute;
        top: -50px;
        right: -50px;
        width: 2px;
        height: 80px;
        background: linear-gradient(to bottom, rgba(255, 255, 255, 0.8), transparent);
        animation: meteor-shower 5s linear infinite;
    }

    .shooting-star:nth-child(2) {
        top: -50px;
        right: 200px;
        animation-delay: 1s;
        animation-duration: 4s;
    }

    .shooting-star:nth-child(3) {
        top: -50px;
        right: 400px;
        animation-delay: 2s;
        animation-duration: 3s;
    }

    .shooting-star:nth-child(4) {
        top: -50px;
        right: 600px;
        animation-delay: 3s;
        animation-duration: 4.5s;
    }

    .shooting-star:nth-child(5) {
        top: -50px;
        right: 800px;
        animation-delay: 4s;
        animation-duration: 3.5s;
    }

    .shooting-star:nth-child(6) {
        top: -50px;
        right: 200px;
        animation-delay: 1s;
        animation-duration: 4s;
    }

    .shooting-star:nth-child(7) {
        top: -50px;
        right: 200px;
        animation-delay: 2s;
        animation-duration: 4s;
    }

    .shooting-star:nth-child(8) {
        top: -50px;
        right: 200px;
        animation-delay: 3s;
        animation-duration: 4s;
    }

    .shooting-star:nth-child(9) {
        top: -50px;
        right: 200px;
        animation-delay: 4s;
        animation-duration: 4s;
    }

    @keyframes meteor-shower {
        0% {
            transform: rotate(215deg) translateX(0);
            opacity: 1;
        }
        70% {
            opacity: 1;
        }
        100% {
            transform: rotate(215deg) translateX(-1000px);
            opacity: 0;
        }
    }

    .oval {
        width: 40px;
        height: 60px;
        border: 2px solid white;
        border-radius: 20px;
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .arrow {
        width: 10px;
        height: 10px;
        border-left: 2px solid white;
        border-bottom: 2px solid white;
        transform: rotate(-45deg);
        animation: bounce 1.5s infinite;
    }

    @keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
            transform: translateY(0) rotate(-45deg);
        }
        40% {
            transform: translateY(10px) rotate(-45deg);
        }
        60% {
            transform: translateY(5px) rotate(-45deg);
        }
    }
</style>
