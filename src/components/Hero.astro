<section class="relative h-screen bg-gradient-to-bl from-[#19274e] to-[#220114]">
    <!-- Contenedor de partículas -->
    <div id="particles-js" class="absolute inset-0"></div>
    
    <!-- Contenido -->
    <div class="relative z-10 h-full flex flex-col items-center justify-center px-4 text-center">
        <img 
            src="/img/Logo_MarkiDev-BGoff.png" 
            alt="Logo MarkiDev" 
            class="w-auto h-auto max-h-[60vh]"
        />
        <h1 class="text-4xl font-bold text-white md:text-6xl mt-4">MarkiDev</h1>
        <p class="mt-4 text-lg text-white md:text-2xl">Desarrollo web a tu medida</p>

        <!-- Botón para desplazar hacia abajo -->
        <a href="#servicios" aria-label="Ir a la siguiente sección" class="absolute bottom-20 left-1/2 -translate-x-1/2">
            <div class="oval">
                <div class="arrow"></div>
            </div>
        </a>
    </div>
</section>

<script>
    // Importamos particles.js directamente desde CDN para simplicidad
    const script = document.createElement('script');
    script.src = 'https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js';
    script.onload = () => {
        // @ts-ignore
        particlesJS('particles-js', {
            particles: {
                number: {
                    value: 80,
                    density: { enable: true, value_area: 800 }
                },
                color: { value: "#ffffff" },
                shape: { type: "circle" },
                opacity: {
                    value: 0.5,
                    random: true,
                    anim: { enable: false }
                },
                size: {
                    value: 3,
                    random: true,
                    anim: { enable: false }
                },
                line_linked: { enable: false },
                move: {
                    enable: true,
                    speed: 4,
                    direction: "bottom-right",
                    random: false,
                    straight: true,
                    out_mode: "out",
                    bounce: false
                }
            },
            interactivity: { enable: false },
            retina_detect: true
        });
    };
    document.head.append(script);
</script>
