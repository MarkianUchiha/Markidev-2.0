---
interface Props {
  title: string;
  description: string;
  pubDate: Date;
  slug: string;
  tags?: string[];
}

const { title, description, pubDate, slug, tags } = Astro.props;
---

<article class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 mb-6">
  <h2 class="text-2xl font-bold mb-2">
    <a href={`/blog/${slug}`} class="text-gray-900 dark:text-white hover:text-blue-600">
      {title}
    </a>
  </h2>
  <p class="text-gray-600 dark:text-gray-300 mb-4">{description}</p>
  <div class="flex justify-between items-center">
    <time class="text-sm text-gray-500">{pubDate.toLocaleDateString()}</time>
    {tags && (
      <div class="flex gap-2">
        {tags.map(tag => (
          <span class="bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded">
            {tag}
          </span>
        ))}
      </div>
    )}
  </div>
</article>