---
interface Props {
  title: string;
  description: string;
  pubDate: Date;
  slug: string;
  tags?: string[];
  image?: string;
}

const { title, description, pubDate, slug, tags, image } = Astro.props;

// Formatear la fecha en espa√±ol
const fecha = pubDate.toLocaleDateString('es-ES', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<article class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden transition-transform hover:scale-[1.02] mb-6">
  <a href={`/blog/${slug}`} class="block">
    <div class="relative aspect-[16/9] overflow-hidden bg-gray-100 dark:bg-gray-700">
      {image ? (
        <img 
          src={image} 
          alt={`Imagen para ${title}`} 
          class="w-full h-full object-cover"
          loading="lazy"
        />
      ) : (
        <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-blue-100 to-blue-50 dark:from-gray-700 dark:to-gray-800">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-gray-400 dark:text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
      )}
    </div>

    <div class="p-6">
      <div class="flex gap-2 mb-4">
        {tags?.map(tag => (
          <span class="bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-100 text-xs px-2 py-1 rounded-full">
            {tag}
          </span>
        ))}
      </div>

      <h2 class="text-2xl font-bold mb-3 text-gray-900 dark:text-white group-hover:text-blue-600">
        {title}
      </h2>
      
      <p class="text-gray-600 dark:text-gray-300 mb-4 line-clamp-2">
        {description}
      </p>

      <time class="text-sm text-gray-500 dark:text-gray-400">
        {fecha}
      </time>
    </div>
  </a>
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>