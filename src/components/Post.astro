---
import { getCollection } from 'astro:content';

// Obtener los últimos 3 posts del blog
const allPosts = await getCollection('blog');
const latestPosts = allPosts
  .sort((a, b) => new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf())
  .slice(0, 3);
---

<section class="py-20 bg-gradient-to-bl from-[#19274e] to-[#220114]">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-white text-center mb-12">
      Últimas Publicaciones
    </h2>

    <div class="relative max-w-5xl mx-auto">
      <!-- Carrusel -->
      <div class="carousel-container overflow-hidden" id="blog-carousel">
        <div class="flex transition-transform duration-500 gap-6" id="carousel-track">
          {
            latestPosts.map((post) => (
              <div class="w-full md:w-1/3 flex-shrink-0">
                <a 
                  href={`/blog/${post.slug}`}
                  class="block bg-white/5 rounded-lg overflow-hidden hover:bg-white/10 transition-colors"
                >
                  {post.data.image && (
                    <div class="relative aspect-video">
                      <img
                        src={post.data.image}
                        alt={post.data.title}
                        class="w-full h-full object-cover"
                        loading="lazy"
                      />
                    </div>
                  )}
                  <div class="p-6">
                    <h3 class="text-xl font-semibold text-white mb-2 line-clamp-2">
                      {post.data.title}
                    </h3>
                    <p class="text-gray-300 text-sm mb-4">
                      {new Date(post.data.pubDate).toLocaleDateString('es-ES', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                      })}
                    </p>
                    <div class="flex flex-wrap gap-2">
                      {post.data.tags?.slice(0, 2).map((tag) => (
                        <span class="text-xs bg-blue-500/20 text-blue-300 px-2 py-1 rounded-full">
                          {tag}
                        </span>
                      ))}
                    </div>
                  </div>
                </a>
              </div>
            ))
          }
        </div>
      </div>

      <!-- Botones de navegación -->
      <button
        class="absolute top-1/2 -translate-y-1/2 bg-white/10 hover:bg-white/20 text-white p-3 rounded-full -left-4 md:-left-8 disabled:opacity-50 disabled:cursor-not-allowed"
        id="prevButton"
        aria-label="Anterior post"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      </button>
      <button
        class="absolute top-1/2 -translate-y-1/2 bg-white/10 hover:bg-white/20 text-white p-3 rounded-full -right-4 md:-right-8 disabled:opacity-50 disabled:cursor-not-allowed"
        id="nextButton"
        aria-label="Siguiente post"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </button>
    </div>

    <!-- Enlace a más posts -->
    <div class="text-center mt-12">
      <a
        href="/blog"
        class="inline-flex items-center gap-2 text-white bg-white/10 hover:bg-white/20 px-6 py-3 rounded-lg transition-colors"
      >
        Ver más publicaciones
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>

<script>
  // Lógica del carrusel
  const track = document.getElementById('carousel-track') as HTMLDivElement;
  const nextButton = document.getElementById('nextButton') as HTMLButtonElement;
  const prevButton = document.getElementById('prevButton') as HTMLButtonElement;
  const slides = track?.children;
  
  if (!track || !slides || !nextButton || !prevButton) {
    console.error('Elementos del carrusel no encontrados');
  } else {
    let currentIndex = 0;
    const slidesPerPage = window.innerWidth >= 768 ? 3 : 1;
    const maxIndex = Math.max(0, slides.length - slidesPerPage);

    function updateSlidePosition() {
      const slideWidth = track.clientWidth / slidesPerPage;
      track.style.transform = `translateX(-${currentIndex * slideWidth}px)`;
      
      // Actualizar estado de los botones
      if (currentIndex === 0) {
        prevButton.setAttribute('disabled', 'true');
        prevButton.style.opacity = '0.5';
      } else {
        prevButton.removeAttribute('disabled');
        prevButton.style.opacity = '1';
      }
      
      if (currentIndex >= maxIndex) {
        nextButton.setAttribute('disabled', 'true');
        nextButton.style.opacity = '0.5';
      } else {
        nextButton.removeAttribute('disabled');
        nextButton.style.opacity = '1';
      }
    }

    nextButton.addEventListener('click', () => {
      if (currentIndex < maxIndex) {
        currentIndex++;
        updateSlidePosition();
      }
    });

    prevButton.addEventListener('click', () => {
      if (currentIndex > 0) {
        currentIndex--;
        updateSlidePosition();
      }
    });

    // Actualizar al cargar y al cambiar el tamaño de la ventana
    updateSlidePosition();
    window.addEventListener('resize', () => {
      currentIndex = 0;
      updateSlidePosition();
    });
  }
</script>

<style>
  .carousel-container {
    mask-image: linear-gradient(
      to right,
      transparent,
      black 5%,
      black 95%,
      transparent
    );
  }

  /* Asegurar que las tarjetas tengan la misma altura */
  .carousel-track > * {
    height: 100%;
  }

  /* Limitar el título a 2 líneas */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
