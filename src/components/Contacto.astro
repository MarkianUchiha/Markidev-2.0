// src/components/Contacto.astro
---

<section class="py-20 bg-[#1a0110]">
  <div class="container mx-auto px-4 max-w-3xl">
    <div class="text-center mb-10">
      <h3 class="text-3xl font-bold text-white mb-4">Contactame</h3>
      <div class="w-[70%] h-px bg-white/50 mx-auto"></div>
      <p class="text-gray-400 mt-4">Â¿Quieres invitarme a tu proyecto? Platiquemos</p>
    </div>
    
    <form>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
        <div>
          <label for="nombre" class="block mb-2 text-sm font-medium text-gray-300">Nombre</label>
          <input type="text" id="nombre" name="nombre" class="bg-gray-900/50 border border-gray-700 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 placeholder-gray-500" required />
        </div>
        <div>
          <label for="correo" class="block mb-2 text-sm font-medium text-gray-300">Correo</label>
          <input type="email" id="correo" name="correo" class="bg-gray-900/50 border border-gray-700 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 placeholder-gray-500" required />
        </div>
      </div>
      <div class="mb-6">
        <label for="celular" class="block mb-2 text-sm font-medium text-gray-300">Num. Cel</label>
        <input type="tel" id="celular" name="celular" class="bg-gray-900/50 border border-gray-700 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 placeholder-gray-500" required />
      </div>
      <div class="mb-6">
        <label for="mensaje" class="block mb-2 text-sm font-medium text-gray-300">Mensaje</label>
        <textarea id="mensaje" name="mensaje" rows="5" class="bg-gray-900/50 border border-gray-700 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 placeholder-gray-500"></textarea>
      </div>
      <div class="text-center">
        <button type="submit" class="text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:ring-blue-800 font-medium rounded-lg text-lg px-10 py-3 transition-colors duration-300">
          Enviar
        </button>
      </div>
    </form>
  </div>
</section>
