---
// Defino la estructura de datos para cada trabajo
interface Trabajo {
  titulo: string;
  descripcion: string;
  tecnologias: string[];
  img: string;
  url: string;
}

// Creo una lista de trabajos con datos de ejemplo
const trabajos: Trabajo[] = [
  {
    titulo: "Proyecto Ejemplo 1",
    descripcion: "Esta es una breve descripción del primer proyecto de ejemplo.",
    tecnologias: ["Astro", "Tailwind CSS", "TypeScript"],
    img: "/img/job1.jpg", 
    url: "#",
  },
  {
    titulo: "Proyecto Ejemplo 2",
    descripcion: "Descripción del segundo proyecto. Un desarrollo innovador y responsivo.",
    tecnologias: ["React", "Node.js", "Express"],
    img: "/img/job2.jpg",
    url: "#",
  },
  {
    titulo: "Proyecto Ejemplo 3",
    descripcion: "Tercer proyecto que muestra habilidades en diseño y desarrollo full-stack.",
    tecnologias: ["Vue", "Firebase", "Tailwind CSS"],
    img: "/img/job3.jpg",
    url: "#",
  },
];
---

<section class="relative py-20 bg-[#220114]">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold text-white">Mi Trabajo</h2>
      <p class="mt-4 text-lg text-gray-400 max-w-3xl mx-auto">
        Aquí hay una selección de algunos de mis proyectos recientes. Cada uno
        representa un desafío único y una oportunidad para crecer.
      </p>
    </div>

    <!-- Contenedor para las tarjetas de trabajo -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        trabajos.map((trabajo) => (
          <div class="bg-gray-900/50 border border-white/50 rounded-lg overflow-hidden shadow-2xl flex flex-col h-full">
            <a href={trabajo.url} class="block relative overflow-hidden" style="padding-top: 70%;">
              <img
                src={trabajo.img}
                alt={`Imagen del ${trabajo.titulo}`}
                class="absolute top-0 left-0 w-full h-full object-cover transform transition-transform duration-300 hover:scale-110"
              />
            </a>
            <div class="p-6 flex-grow flex flex-col justify-between">
              <div>
                <h3 class="text-2xl font-bold text-white mb-2">{trabajo.titulo}</h3>
                <p class="text-gray-400 mb-4 text-sm">{trabajo.descripcion}</p>
              </div>
              <div class="flex flex-wrap gap-2 mt-2">
                {trabajo.tecnologias.map((tech) => (
                  <span class="bg-gray-700/60 text-gray-300 text-xs font-semibold px-2.5 py-0.5 rounded-full">
                    {tech}
                  </span>
                ))}
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
