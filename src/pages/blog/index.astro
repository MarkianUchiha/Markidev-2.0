---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import BlogCard from '../../components/BlogCard.astro';

const allBlogPosts = await getCollection('blog');
const sortedPosts = allBlogPosts.sort((a, b) => 
  new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf()
);
---

<Layout 
  title="Mi Blog | MarkiDev"
  description="Exploro y comparto conocimientos sobre desarrollo web, tecnologías modernas y experiencias como desarrollador. Encuentra artículos sobre Astro, React, TypeScript y más."
>
  <main class="max-w-4xl mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8">Mi Blog</h1>
    
    <div class="grid gap-6">
      {sortedPosts.map((post) => (
        <BlogCard 
          title={post.data.title}
          description={post.data.description}
          pubDate={post.data.pubDate}
          slug={post.slug}
          tags={post.data.tags}
        />
      ))}
    </div>
  </main>
</Layout>