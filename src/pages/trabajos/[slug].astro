---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const trabajos = await getCollection('trabajos');
  return trabajos.map((trabajo) => ({
    params: { slug: trabajo.id },
    props: { trabajo },
  }));
}

interface Props {
  trabajo: {
    id: string;
    data: {
      title: string;
      description: string;
      image: string;
      tags: string[];
    };
  };
}

const { trabajo } = Astro.props as Props;
---

<Layout 
  title={`${trabajo.data.title} - Portfolio`}
  description={trabajo.data.description}
>
  <div class="min-h-screen bg-gradient-to-bl from-[#19274e] to-[#220114] flex items-center justify-center">
    <h1 class="text-white text-4xl font-bold">{trabajo.data.title}</h1>
  </div>
</Layout>