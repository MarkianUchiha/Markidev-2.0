---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';

const todosLosTrabajos = (await getCollection('trabajos')).sort(
  (a, b) => new Date(b.data.fecha).getTime() - new Date(a.data.fecha).getTime()
);
---

<Layout title="Mis Proyectos - MarkiDev">
  <section class="py-24 bg-gradient-to-br from-[#101d42] to-[#0c010f]">
    <div class="container mx-auto px-4">
      <div class="text-center max-w-3xl mx-auto">
        <h1 class="text-5xl font-bold text-white leading-tight">Todos Mis Proyectos</h1>
        <p class="mt-6 text-lg text-gray-300">
          Explora una colección completa de mi trabajo. Cada proyecto es una historia de colaboración, creatividad y resolución de problemas.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10 mt-20">
        {todosLosTrabajos.map((trabajo) => (
          <div class="bg-gray-900/50 border border-white/20 rounded-lg overflow-hidden transform hover:scale-105 transition-transform duration-300 ease-in-out">
            <a href={`/trabajos/${trabajo.slug}`}>
              <img
                src={trabajo.data.image}
                alt={trabajo.data.title}
                class="w-full h-60 object-cover"
              />
            </a>
            <div class="p-6">
              <h3 class="text-2xl font-bold text-white">{trabajo.data.title}</h3>
              <p class="text-gray-400 mt-3 h-24 overflow-hidden">{trabajo.data.description}</p>
              <div class="flex flex-wrap gap-2 mt-4">
                {trabajo.data.tags.slice(0, 4).map((tag) => (
                  <span class="bg-gray-700/60 text-gray-300 text-xs px-2 py-1 rounded-full">{tag}</span>
                ))}
              </div>
              <div class="mt-6">
                <a href={`/trabajos/${trabajo.slug}`} class="text-indigo-400 hover:text-indigo-300 font-semibold">
                  Ver Detalles &rarr;
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>
